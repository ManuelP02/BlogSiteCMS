<head>
    <title>Fancy Blog Site - Create Post</title>
</head>
<body>
    <h1 class="text-center my-4">Create New Post</h1>
    <form class="container" id="create-post-form">
        <div class="mb-3">
            <label for="post-title" class="form-label">Post Title:</label>
            <input type="text" id="post-title" name="post-title" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="post-description" class="form-label">Post Description:</label>
            <textarea id="post-description" name="post-description" class="form-control" rows="5" required></textarea>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Create Post</button>
        </div>
    </form>
    <div id="error-message" class="text-danger mt-3 d-none"></div>
    <h1 class="text-center my-4">My posts</h1>
<div class="container mt-4">
    {{#if posts.length}}
        {{#each posts}}
            <div class="card mb-3">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">{{title}}</h5>
                    <div>
                        <button class="btn btn-sm btn-success edit-post-btn" data-post-id="{{id}}">Edit</button>
                        <button class="btn btn-sm btn-danger delete-post" data-post-id="{{id}}">Delete</button>
                        <a href="/home" class="btn btn-sm btn-secondary">Cancel</a>
                    </div>
                </div>
                <div class="card-body">
                    <p class="card-text">{{description}}</p>
                    <p class="card-text">
                        <small class="text-muted">
                            Posted on {{formatDate createdAt}}
                        </small>
                    </p>
                    
                    <!-- Edit Form (initially hidden) -->
                    <form class="edit-post-form mt-3" data-post-id="{{id}}" style="display: none;">
                        <div class="mb-3">
                            <input type="text" class="form-control post-title" value="{{title}}" required>
                        </div>
                        <div class="mb-3">
                            <textarea class="form-control post-content" rows="3" required>{{description}}</textarea>
                        </div>
                        <button type="submit" class="btn btn-success">Save Changes</button>
                        <button type="button" class="btn btn-secondary cancel-edit" data-post-id="{{id}}">Cancel</button>
                    </form>

                    <!-- Comment Count -->
                    <div class="mt-3">
                        <small class="text-muted">
                            {{#if comments.length}}
                                {{comments.length}} comment{{#if comments.[1]}}s{{/if}}
                            {{else}}
                                No comments yet
                            {{/if}}
                        </small>
                    </div>
                </div>
            </div>
        {{/each}}
    {{else}}
        <p class="text-center">You haven't created any posts yet.</p>
    {{/if}}
</div>


    <script src="../js/post.js"></script>
</body>